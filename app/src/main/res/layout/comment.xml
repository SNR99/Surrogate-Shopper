<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:padding="20dp"
				android:layout_height="wrap_content">
	<RelativeLayout android:visibility="gone" android:layout_width="match_parent"
					android:id="@+id/comment_main_xml"
					android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
				  android:id="@+id/volNameReg"
				  android:textSize="20sp"
				  android:textColor="@color/darkGrey"
				  android:layout_height="wrap_content"/>


		<EditText
				android:layout_below="@id/volNameReg"
				android:hint="Say thank"
				android:layout_marginVertical="40dp"
				android:id="@+id/edit_text_comment"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:inputType="text|textMultiLine"
				android:gravity="top"/>


		<Button android:text="Send" android:background="@drawable/rounded_button"
				android:layout_width="match_parent"
				android:textColor="@android:color/white"
				android:id="@+id/sendCommentBtn"
				android:layout_marginBottom="10dp"

				android:layout_below="@id/edit_text_comment"
				android:layout_height="wrap_content"/>

	</RelativeLayout>
	<RelativeLayout android:id="@+id/commentProgress" android:layout_width="match_parent"
					android:layout_height="wrap_content">
		<ProgressBar android:layout_centerInParent="true" android:indeterminateTint="@color/orangeRed"
					 android:layout_marginVertical="40dp"
					 android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</RelativeLayout>


</RelativeLayout>