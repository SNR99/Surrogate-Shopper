<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:padding="10dp"
				android:layout_height="wrap_content">
	<TextView android:text="Basket Name" android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textSize="20sp"
			  android:textColor="@color/darkGrey"
			  android:id="@+id/aval_basket_name"
			  tools:layout_editor_absoluteX="24dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textColor="@color/cyan"
			  android:layout_below="@id/aval_basket_name"
			  android:id="@+id/user_basket"
	/>
	<TextView android:layout_centerVertical="true" android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="2000/06/26"
			  android:id="@+id/basket_date"
			  android:layout_alignParentEnd="true"
			  tools:layout_editor_absoluteY="39dp"/>

</RelativeLayout>