<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="20dp"
				android:layout_marginTop="?attr/actionBarSize">
	<RelativeLayout android:id="@+id/volunteer_main_loader" android:layout_width="match_parent"
					android:layout_height="match_parent">

		<ProgressBar android:layout_centerInParent="true"
					 android:layout_width="wrap_content"
					 android:indeterminateTint="@color/orangeRed"
					 android:layout_height="wrap_content"/>


	</RelativeLayout>
	<RelativeLayout android:visibility="gone" android:id="@+id/vol_main_container_list"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
		<TextView android:layout_marginVertical="5dp" android:textColor="@color/darkGrey" android:id="@+id/avalB"
				  android:textSize="30dp" android:gravity="center"
				  android:text="Available Baskets" android:layout_width="match_parent"
				  android:layout_height="wrap_content"/>
		<ListView android:layout_below="@+id/avalB" android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:id="@+id/available_Basket"/>
		<TextView android:layout_centerInParent="true" android:id="@+id/main_empty" android:layout_width="wrap_content"
				  android:gravity="center"
				  android:text="Empty"
				  android:textColor="@color/darkGrey"
				  android:textSize="30dp"
				  android:layout_height="wrap_content"/>

	</RelativeLayout>


</RelativeLayout>