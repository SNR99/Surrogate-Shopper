<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_marginTop="?attr/actionBarSize"
				android:layout_width="match_parent"
				android:padding="20dp"
				android:layout_height="wrap_content">

	<RelativeLayout android:visibility="gone" android:id="@+id/ftb" android:layout_width="match_parent"
					android:layout_height="wrap_content">
		<RelativeLayout android:layout_marginVertical="5dp" android:id="@+id/taken_basket"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
			<TextView android:layout_centerVertical="true"
					  android:textColor="@color/darkGrey" android:textSize="30dp"
					  android:id="@+id/profile_basket"
					  android:gravity="center"
					  android:layout_marginBottom="10dp"
					  android:layout_width="match_parent" android:text="Basket Name"
					  android:layout_height="wrap_content"/>
			/>

		</RelativeLayout>

		<RelativeLayout android:layout_below="@+id/taken_basket"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
			<ListView android:id="@+id/r" android:layout_width="wrap_content"
					  android:layout_height="wrap_content"/>


			<Button android:layout_marginTop="30dp" android:layout_below="@+id/r" android:id="@+id/acceptRequest"
					android:textColor="@android:color/white"
					android:background="@drawable/rounded_button"
					android:layout_width="match_parent" android:layout_height="wrap_content" android:text="accept"/>

		</RelativeLayout>

	</RelativeLayout>
	<RelativeLayout android:paddingVertical="40dp" android:id="@+id/pr" android:layout_width="match_parent"
					android:layout_height="wrap_content">
		<ProgressBar android:layout_centerInParent="true" android:layout_width="wrap_content"
					 android:layout_height="wrap_content" android:indeterminateTint="@color/orangeRed"
		/>
	</RelativeLayout>


</RelativeLayout>