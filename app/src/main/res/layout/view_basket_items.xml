<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:padding="10dp">

	<TextView android:layout_marginVertical="10dp" android:textColor="@color/darkGrey" android:gravity="center"
			  android:id="@+id/basketItemsHeader" android:textSize="20dp"
			  android:text="Basket Items"
			  android:layout_width="match_parent" android:layout_height="wrap_content"/>

	<ListView android:visibility="gone" android:layout_below="@id/basketItemsHeader" android:id="@+id/popItems"
			  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<ProgressBar android:layout_below="@+id/basketItemsHeader" android:id="@+id/itemsProgress"
				 android:layout_centerInParent="true"
				 android:layout_width="wrap_content"
				 android:indeterminateTint="@color/orangeRed"

				 android:layout_height="wrap_content"/>

</RelativeLayout>